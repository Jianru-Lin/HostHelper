<Window x:Class="HostHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Host 文件修改" Height="600" Width="650" Loaded="onLoad" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*" />
            <RowDefinition Height="45" />
        </Grid.RowDefinitions>
        <TextBox Name="textBox" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" AcceptsTab="True" />
        <Grid Grid.Row="1" Name="grid1" Background="#FFE5E5E5">
            <StackPanel Name="stackPanel1" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="读取" Height="23" Name="loadButton" Width="75" Click="loadButton_Click" />
                <Button Content="保存" Height="23" Name="saveButton" Width="75" Margin="20,0,0,0" Click="saveButton_Click" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
